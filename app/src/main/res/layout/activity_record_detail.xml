<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/testTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test 1 - Glucose"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:id="@+id/fullImageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp"
            android:scaleType="centerInside"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Result: "
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resultValueText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="120.5 mg/dL"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Type: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/testTypeDetailText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Glucose"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dateDetailText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jan 30, 2026 at 2:30 PM"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/confidenceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confidence: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/confidenceDetailText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="95%"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Detected Text:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_border"
            android:padding="12dp"
            android:scrollbars="vertical"
            android:nestedScrollingEnabled="true">

            <TextView
                android:id="@+id/rawOcrText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detected OCR text will appear here..."
                android:textSize="14sp"
                android:textIsSelectable="true"
                android:lineSpacingExtra="2dp" />

        </ScrollView>

        <Button
            android:id="@+id/sharePdfButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Upload/Share Record"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_green_dark"
            style="@style/Widget.Material3.Button" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Record"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_red_dark"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</ScrollView>